---
interface Props {
  mapUrl: string;
  wttr: any;
}

const { mapUrl, wttr } = Astro.props;
---

<div id="map">
  <div class="map-container">
    <div class="info">{wttr.maxTempC}Â°C</div>
  </div>
</div>
<style define:vars={{ mapUrl: `url(${mapUrl})` }}>
  #map {
    width: 100%;
    background-color: var(--bg);
  }

  .map-container {
    background: var(--mapUrl);
    width: 100%;
    height: 230px;
    background-position: center;
    position: relative;
    background-size: cover;
  }

  .info {
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-size: 16px;
    font-weight: bold;
    background: var(--bg);
    padding: 5px 10px;
    border-radius: 15px;
    border: solid 3px var(--dynamic-bg);
  }
</style>
